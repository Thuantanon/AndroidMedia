<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarText</item>
    </style>

    <style name="ActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:state_multiline">true</item>
    </style>

    <style name="CommonNoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="CommonBottomSheet" parent="CommonNoTitleDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimSlide</item>
    </style>

    <style name="AnimSlide">
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
    </style>

</resources>
