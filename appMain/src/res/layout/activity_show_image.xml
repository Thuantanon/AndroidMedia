<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack3"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="ImageView方式"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@drawable/mylove"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack3"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="自定义View方式"
            />

        <com.cxh.androidmedia.view.BitmapView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginTop="10dp"
            app:bv_drawable="@drawable/mylove"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack3"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="SurfaceView方式"
            />

        <com.cxh.androidmedia.view.BitmapSurfaceView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack3"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:text="TextureView方式"
            />

        <com.cxh.androidmedia.view.BitmapTextureView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</ScrollView>